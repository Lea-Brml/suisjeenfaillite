
          <div class="container php-email-form">
            <div class="row pl-4 pr-4">


              <% flash.each do |type, msg| %>
                <div class="alert alert-info margin-top:100px; " style="z-index:1">
                  <%= msg %>
                </div>
              <% end %>

              <%= form_tag url_for(facture_index_path(@user.id)), :facture => @facture, method: 'post' do %>
                <div class="row pl-4 pr-4">

                  <div class="col-lg-12">
                    <div class="form-group contact-block1">
                      <%= text_field_tag 'libelle', nil, placeholder: 'libelle', class:"form-control" %>
                    </div>
                  </div>

                  <div class="col-lg-12">
                    <div class="form-group">
                      <%= text_area_tag 'facture_montant', nil, placeholder: 'facture_montant', class:"form-control" %>
                    </div>
                  </div>

                

                  <div class="col-lg-12">
                    <%= submit_tag "    Envoyer    ", class: "btn btn-outline-primary", style:"border-radius:20px;" %>
                    <%end%>
                  </div>

                </div>
              </div>
            </div>
