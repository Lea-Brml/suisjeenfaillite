<div class="col-xs-12 col-sm-12 col-md-10 col-lg-10 mx-auto">

    <h2 class="col-12 text-center mb-4 pb-4 mt-4 title-ajouts ">Modifier l'article :</h2>


    <%= form_tag url_for(action:'update'), method: "patch" do %>


      <div class='row pt-3'>

        <div class="col-lg-12 ">
          <span>Titre de l'article</span>
          <div class="form-group contact-block1">
            <%= text_field_tag 'title', @blogup.title,  class:"form-control icon-file" %>
          </div>
        </div>

        <div class="col-lg-12 my-4">
          <div class="form-group">
            <span>Contenu</span>
            <%= text_area_tag 'body', @blogup.body,  class:"form-control icon-euro", id:"post_body_edit" %>
          </div>
          <trix-editor input="post_body_edit"></trix-editor>

        </div>



        <div class="col-6 mt-4 text-right">
          <%= submit_tag "Mettre à jour l'article", class:"btn btn-form", style:"border-radius:20px; margin:2em 0;"  %>

        <% end %>
        </div>

        <div class="col-6 mt-4" style="padding-top:2em;">
          <a href="<%= blog_path%>" class="btn-outline" data-confirm="Êtes vous sûr de vouloir supprimer l'article ?" data-method="DELETE" >Supprimer l'article</a>
        </div>



  </div>
