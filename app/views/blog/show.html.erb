
<div id="blog" class="container" style="margin-top:6em;">

  <div style="margin-top:4em;">
      <a href="<%=edit_blog_path(@blog.id)%>">Editer l'article</a><br>
      <a href="<%= blog_path(@blog)%>" class="btn-outline red" data-confirm="Êtes vous sûr de vouloir supprimer cet article ?" data-method="DELETE" >Supprimer l'article</a>
  </div>

      <div class="jumbotron-blog">

        <%=image_tag "blog1.jpg", class:"blog-image"%>

      </div>

      <h1 class="my-4 pb-4"> <%=@blog.title%></h1>


      <%=sanitize @blog.body%>

      <span style="font-size:12px;"><i>Ecrit le <%= @blog.created_at.strftime("%d-%m-%Y")%></i></span>


</div>
