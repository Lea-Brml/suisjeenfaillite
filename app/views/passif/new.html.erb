
<div class="registration-form pt-4">

  <div class="container sign-up-form mt-4">

    <div class="py-4 my-4 row">

      <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">

        <div class="d-none d-md-block">

        <%= image_tag "Statistics-pana.png" , style:"width:100%;"%>

        </div>


      </div>

      <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 ">

          <h2 class="col-12 text-center mb-4 pb-4">Passif éxigible</h2>


          <%= form_tag url_for(passif_index_path(@user.id)), :passif => @passif, method: 'post' do %>

            <div class='row' style="display:flex;align-items:center;">


              <div class="col-lg-11">
                <div class="form-group contact-block1">

                  <%= text_field_tag 'salaires', nil, placeholder: 'Salaires', class:"form-control" %>

                </div>
              </div>
              <div class="col-1">
                <i class="fas fa-question-circle" data-toggle="tooltip" title="Salaires brut des employés non payés à échéance."></i>
              </div>



              <div class="col-lg-11">
                <div class="form-group">
                  <%= text_field_tag 'charges', nil, placeholder: 'charges', class:"form-control" %>
                </div>
              </div>
              <div class="col-1">
                <i class="fas fa-question-circle" data-toggle="tooltip" title="Par exemple : charges sociales patronales, charges sociales non salariées… non payées à échéance."></i>
              </div>

              <div class="col-lg-11">
                <div class="form-group">
                  <%= text_field_tag 'loyers', nil, placeholder: 'Loyers', class:"form-control" %>
                </div>
              </div>
              <div class="col-1">
                <i class="fas fa-question-circle" data-toggle="tooltip" title="Loyers"></i>
              </div>

              <div class="col-lg-11">
                <div class="form-group">
                  <%= text_field_tag 'Mensualités dʼemprunt', nil, placeholder: 'Echeances', class:"form-control" %>
                </div>
              </div>
              <div class="col-1">
                <i class="fas fa-question-circle" data-toggle="tooltip" title="Mensualités non payées à échéance (sauf accord préalable de l’organisme bancaire)"></i>
              </div>

              <div class="col-lg-11">
                <div class="form-group contact-block1">
                  <%= text_field_tag 'dette_fiscale', nil, placeholder: 'Dettes fiscales', class:"form-control" %>
                </div>
              </div>
              <div class="col-1">
                <i class="fas fa-question-circle" data-toggle="tooltip" title="Dettes non payées à échéances (sauf échéancier convenu avec l’administration ou contestation de la dette fiscale)."></i>
              </div>

              <div class="col-lg-11">
                <div class="form-group contact-block1">
                  <%= text_field_tag 'dette_fournisseur', nil, placeholder: 'Dettes fournisseurs', class:"form-control" %>
                </div>
              </div>
              <div class="col-1">
                <i class="fas fa-question-circle" data-toggle="tooltip" title="Dettes non payées à échéances (sauf accord des fournisseurs)."></i>
              </div>


              <div class="col-lg-12 mt-4">
                <%= submit_tag "    Etape suivante    ", class: "btn btn-form", style:"border-radius:20px;" %>
                <%end%>
              </div>

              <div class="col-lg-12 mt-4 pt-4">
                <span style="font-size:12px;">Etape 1/3</span>
              </div>



        </div>



        </div>

        </div>

      </div>

    </div>

    <script>

      (function () {
        ('[data-toggle="tooltip"]').tooltip()
      })


    </script>
