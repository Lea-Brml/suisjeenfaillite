
          <div class="container php-email-form">
            <div class="row pl-4 pr-4">


              <% flash.each do |type, msg| %>
                <div class="alert alert-info margin-top:100px; " style="z-index:1">
                  <%= msg %>
                </div>
              <% end %>

              <%= form_tag url_for(passif_index_path(@user.id)), :passif => @passif, method: 'post' do %>
                <div class="row pl-4 pr-4">

                  <div class="col-lg-12">
                    <div class="form-group contact-block1">
                      <%= text_field_tag 'salaires', nil, placeholder: 'Salaires', class:"form-control" %>
                    </div>
                  </div>

                  <div class="col-lg-12">
                    <div class="form-group">
                      <%= text_area_tag 'charges', nil, placeholder: 'charges', class:"form-control" %>
                    </div>
                  </div>

                  <div class="col-lg-12">
                    <div class="form-group">
                      <%= text_area_tag 'loyers', nil, placeholder: 'Loyers', class:"form-control" %>
                    </div>
                  </div>

                  <div class="col-lg-12">
                    <div class="form-group">
                      <%= text_area_tag 'echeances', nil, placeholder: 'Echeances', class:"form-control" %>
                    </div>
                  </div>

                  <div class="col-lg-12">
                    <div class="form-group contact-block1">
                      <%= text_field_tag 'dette_fiscale', nil, placeholder: 'dette_fiscale', class:"form-control" %>
                    </div>
                  </div>

                  <div class="col-lg-12">
                    <div class="form-group contact-block1">
                      <%= text_field_tag 'dette_fournisseur', nil, placeholder: 'dette_fournisseur', class:"form-control" %>
                    </div>
                  </div>


                  <div class="col-lg-12">
                    <%= submit_tag "    Envoyer    ", class: "btn btn-outline-primary", style:"border-radius:20px;" %>
                    <%end%>
                  </div>

                </div>
              </div>
            </div>
