                </div>
              </div>


              <div class="col-lg-6 my-1">
                <div class="form-group contact-block1">
                  <%= text_field_tag 'email', nil,placeholder:"   Adresse mail",  class:"form-control icon-mail" %>
                </div>
              </div>


              <div class="col-lg-6 my-1">
                <div class="form-group">
                  <%= text_field_tag 'telephone', nil, placeholder:"   Numéro de téléphone", class:"form-control icon-phone"  %>
