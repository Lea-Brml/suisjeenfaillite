



<div class="main hero-form">


  <div class=" row" style="display:flex;align-items:center;">



    <div class="col-xs-12 col-sm-12 col-md-5 col-lg-5 d-none d-md-block">
      <div class="text-center">
        <%= image_tag "login.jpg" , style:"width:70%; margin-left:2em;"%>
      </div>
    </div>


    <div class="col-xs-12 col-sm-12 col-md-7 col-lg-7">


      <section class="signup registration-form">

        <div class="container mx-4 px-4">
          <div class="signup-content ">


            <h2 class="form-title my-4 py-4">Se connecter Ã  mon espace personnel</h2>


            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>


          <div class="form-group">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"    Adresse email",  class:"form-control icon-mail" %>
          </div>

          <div class="form-group">
            <%= f.password_field :password, autocomplete: "current-password", placeholder: "    Mot de passe",  class:"form-control icon-block" %>
          </div>

          <div class="form-group">
          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me , id:"agree-term", class:"agree-term"%>
              <label for="agree-term" class="label-agree-term"><span><span></span></span>Se souvenir de moi.</label>
            </div>
          <% end %>
          </div>

          <div class="actions">
            <%= f.submit "Connexion", class:"btn" %>
          </div>
        <% end %>



          </div>
        </div>

      </section>

    </div>

  </div>

</div>
